{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ESNext"
    ],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@figma"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
